<!DOCTYPE html>
<html>

<head>
    <title>Document</title>
    <link rel='stylesheet' href='/css/reset.css' />
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>
    <div class="container">
        <%- include('./common/header.ejs', { nickname: nickname, isAdmin: isAdmin }) %>
        <div class="footer">
            <%-include('./common/footer_lef.ejs') %>
            <div class="footer_rig">
                <p class="addPhone">
                    <button>
                        <a class="addMobile">新增手机</a>
                    </button>
                </p>
                <div class="table2">
                    <table>
                        <thead>
                            <th>序号</th>
                            <th>图片</th>
                            <th>手机名称</th>
                            <th>所属品牌</th>
                            <th>官方指导价</th>
                            <th>二手回收价</th>
                            <th>操作</th>
                        </thead>

                        <tbody class="tbody">
                            <!-- <tr>
                                <td>1</td>
                                <td></td>
                                <td>苹果 iPhone XS Max</td>
                                <td>苹果</td>
                                <td>￥18000</td>
                                <td>￥12000</td>
                                <td>
                                    <a class="phone-update">修改</a>
                                    <a>删除</a>
                                </td>
                            </tr> -->
                        </tbody>
                    </table>

                    <ul class="pageEl" style="float: right;"></ul>

                    <div class="alert">
                        <h2 class="user-update">修改</h2>
                        <form class="updata" action="/mobile/update" method="post">
                            <p style="display:none;"><span>id：</span><input type="text" class="id" name="id"></p>
                            <p><span>手机名称：</span><input type="text" class="names" name="names"></p>
                            <p><span>所属品牌：</span><input type="text" class="brands" name="brands" style="margin-left: 13px"></p>
                            <p><span>官方指导价：</span><input type="tel" class="guanprices" name="guanprices"></p>
                            <p><span>二手回收价：</span><input type="tel" class="secondprices" name="secondprices"></p>
                            <button class="confirm">
                                <a class="updatas">确认修改</a>
                            </button>
                            <button class="dont">取消</button>
                        </form>
                    </div>



                    <div class="mobile">
                        <h2 class="mobile-add">新增</h2>
                        <form class="add" action="/mobile/add" method="post" enctype="multipart/form-data">
                            <p>
                                <span>名称：</span>
                                <input type="text" class="user" name="mobileName" placeholder="请输入手机名称">
                            </p>
                            <p>
                                <span>品牌：</span>
                                <select class="choose" name="choose">
                                    <option>苹果</option>
                                    <option>三星</option>
                                    <option>小米</option>
                                    <option>华为</option>
                                    <option>荣耀</option>
                                </select>
                            </p>
                            <p>
                                <span class="second">官方指导价：</span>
                                <input type="text" class="price" name="guanPrice" placeholder="请输入官方指导价">
                            </p>
                            <p>
                                <span class="second">二手回收价：</span>
                                <input type="text" class="price" name="secondPrice" placeholder="请输入二手回收价">
                            </p>
                            <p class="pic">
                                <span class="block">图片：</span>
                                <input type="file" class="file" name="mobile">
                            </p>
                            <button class="confirm" type="submit">确认修改</button>
                            <button class="donts" type="button">取消</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/js/jquery.min.js"></script>
<script src="/js/index.js"></script>
<script>
    var page = 1;
    var pageSize = 3;


    function getList() {
        $.post("/mobile/list", { page: page, pageSize: pageSize }, function (res) {
            if (res.code === 0) {
                var str = '';
                var list = res.data.list;
                var totalPage = res.data.totalPage;
                for (var i = 0; i < list.length; i++) {
                    str += `
                    <tr class="phones">
                        <td>${list[i]._id}</td>
                        <td>
                            <img src="${list[i].src}" style="width:80px;height:80px;margin-top:10px;border:1px solid #eee;"/>
                        </td>
                        <td>${list[i].name}</td>
                        <td>${list[i].brand}</td>
                        <td>￥${list[i].guanprice}</td>
                        <td>￥${list[i].secondprice}</td>
                        <td>
                            <a class="phone-update">修改</a>
                            <a class="delete-phone">删除</a>
                        </td>
                    </tr>
                `

                }

                var pageStr = '';
                console.log(totalPage);
                for (var i = 0; i < totalPage; i++) {
                    pageStr += `
                        <li class="page_item" style="float: left; width: 35px;">${i + 1}</li>
                    `
                };

                console.log(pageStr);


                $(".tbody").html(str);
                $('.pageEl').html(pageStr);
                $('.phone-update').click(function () {
                    $('.alert').show();
                    var id = $(this).parent().parent().children().eq(0).text().trim();
                    var name = $(this).parent().parent().children().eq(2).text().trim();
                    var brand = $(this).parent().parent().children().eq(3).text().trim();
                    var guanprice = $(this).parent().parent().children().eq(4).text().trim();
                    var secondprice = $(this).parent().parent().children().eq(5).text().trim();
                    $(".id").val(id);
                    $(".names").val(name);
                    $(".brands").val(brand);
                    $(".guanprices").val(guanprice);
                    $(".secondprices").val(secondprice);
                });

                $(".delete-phone").click(function () {
                    var id = $(this).parent().parent().children().eq(0).text().trim();
                    var does = confirm("确认删除吗？");
                    if (does) {
                        $(this).attr("href", `/mobile/delete/?id=${id}`);
                    }
                });
            } else {
                alert(res.msg);
            }

        });
    }

    $(document).ready(function () {
        getList();


        // 分页的点击事件

        $('.pageEl').on('click', '.page_item', function () {
            var curPage = $(this).text().trim();
            page = curPage;
            getList();
            console.log(curPage);
        });
    });
</script>

</html>